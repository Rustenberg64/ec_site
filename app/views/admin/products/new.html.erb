<div class="container">
<h2 class="text-center mb-4">Create new product</h2>
<div class="d-flex flex-column align-items-center">
<%= link_to "Back", admin_products_path, class: "btn btn-primary align-self-baseline offset-md-2"%>
  <%= form_with model: @product, url: admin_products_path, class: "col-lg-6" do |f|%>

    <div class="mb-3">
      <%= f.label :name, class:"form-label" %>
      <%= f.text_field :name, class:"form-control"%>
    </div>

    <div class="mb-3">
      <%= f.label :manufacturer, class: "form-label" %>
      <%= f.text_field :manufacturer, class: "form-control"%>
    </div>

    <div class="mb-3">
      <%= f.label :price, class: "form-label" %>
      <%= f.number_field :price, class: "form-control"%>
    </div>

    <div class="mb-3">
      <%= f.label :stock, class: "form-label" %>
      <%= f.number_field :stock, class: "form-control"%>
    </div>

    <div class="mb-3">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, rows: 4,class: "form-control"%>
    </div>

    <div class="mb-5">
      <%= f.label :image, class: "form-label" %>
      <%= f.file_field :image,class: "form-control"%>
    </div>

  <div class="mb-4 d-grid">
    <%= f.submit "Create product", class: "btn btn-primary"  %>
  </div>

  <% end %>
</div>
</div>