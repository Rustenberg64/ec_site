<div class="container">
  <div class="row">
    <div class="col-md">
      <h2 class="border-bottom border-2 p-2">Shopping cart</h2>
      <% if @total_quantity == 0 %>
      <h4>No item<h4>
      <% else %>
      <% @cart_items.each do |cart_item| %>
        <div class="d-flex border-bottom border-2 p-4">
          <div class="col-md-2 col-2 me-3">
            <%= link_to image_tag(cart_item.product.image, class: "img-fluid"), product_path(cart_item.product) %>
          </div>
          <div class="col">
            <div class="d-flex">
            
              <div class="col">
                <h5><%= cart_item.product.name %></h5>
                <div class="mb-2"><%= cart_item.product.manufacturer %></div>
                <h4>¥<%= cart_item.product.price %></h4>
              </div>

              <div class="d-flex">
                <div class="mt-2 me-2">Qty.</div>
                <%= button_to "-", cart_item_path(cart_item, cart_item: { product_id: cart_item.product_id, quantity: cart_item.quantity-1 }), data: { "turbo-method": :patch }, method: :patch,class: "btn text-danger" %>
                <div class="mt-2 me-2 ms-2"><%=cart_item.quantity%></div>
                <%= button_to "+", cart_item_path(cart_item, cart_item: { product_id: cart_item.product_id, quantity: cart_item.quantity+1 }), data: { "turbo-method": :patch }, method: :patch,class: "btn text-success" %>
              </div>
            </div>
          </div>
            <div class="col-2 ms-auto align-self-end">
              <%= button_to "del", cart_item_path(cart_item), data: { "turbo-method": :delete}, method: :delete, class: "btn btn-danger" %>
            </div>
        </div>
      <% end %>
      <% end %>
    </div>

    <div class=" col-lg-4 p-3">
      <div class="">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
          <span class="text-primary">Total</span>
          <span class="badge bg-primary rounded-pill"><%=@total_quantity%></span>
        </h4>
        <ul class="list-group mb-3">
          <li class="list-group-item d-flex justify-content-between lh-sm">
            <div>
              <h6 class="my-0">Subtotal</h6>
              <small class="text-muted"></small>
            </div>
            <span class="text-muted">¥<%=@total%></span>
          </li>
          <li class="list-group-item d-flex justify-content-between lh-sm">
            <div>
              <h6 class="my-0">Shipping fee</h6>
              <small class="text-muted">Calculated at check out</small>
            </div>
            <span class="text-muted"></span>
          </li>
          <li class="list-group-item d-flex justify-content-between">
            <span>Total</span>
            <strong>¥<%=@total%></strong>
          </li>
        </ul>
      </div>
    </div>


  </div>
</div>