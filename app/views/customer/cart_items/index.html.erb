<div class="container">
  <div class="row">
    <div class="col-md">
      <h2 class="border-bottom border-2 p-2">Shopping cart</h2>
      <% if @total_quantity == 0 %>
      <h4>No item<h4>
      <% else %>
      <% @cart_items.each do |cart_item| %>
        <div class="d-flex border-bottom border-2 p-4">
          <div class="col-md-2 col-2 me-3">
            <%= link_to image_tag(cart_item.product.image, class: "", id: "image"), product_path(cart_item.product), class: "ratio ratio-1x1" %>
          </div>
          <div class="col">
            <div class="d-flex">
            
              <div class="col">
                <h5><%= cart_item.product.name %></h5>
                <div class="mb-2"><%= cart_item.product.manufacturer %></div>
                <h4>¥<%= cart_item.product.price %></h4>
              </div>

              <div class="d-flex">
                <div class="mt-2 me-1">Qty.</div>
                <%= button_to cart_item_path(cart_item, cart_item: { product_id: cart_item.product_id, quantity: cart_item.quantity-1 }), data: { "turbo-method": :patch }, method: :patch,class: "btn"  do%>
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-dash-circle" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                    <path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z"/>
                </svg>
                <% end %>
                <div class="mt-2"><%=cart_item.quantity%></div>
                <%= button_to cart_item_path(cart_item, cart_item: { product_id: cart_item.product_id, quantity: cart_item.quantity+1 }), data: { "turbo-method": :patch }, method: :patch,class: "btn" do%>
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
            <div class="col-2 ms-auto align-self-end">
              <%= button_to cart_item_path(cart_item), data: { "turbo-method": :delete}, method: :delete, class: "btn" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                  <path fill-rule="evenodd" d="M6.5 1a.5.5 0 0 0-.5.5v1h4v-1a.5.5 0 0 0-.5-.5h-3ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1H3.042l.846 10.58a1 1 0 0 0 .997.92h6.23a1 1 0 0 0 .997-.92l.846-10.58Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
                </svg>
              <% end %>
            </div>
        </div>
      <% end %>
      <% end %>
    </div>


    <div class=" col-lg-4 p-3">
      <div class="">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
          <span class="text-primary">Total</span>
          <span class="badge bg-primary rounded-pill"><%=@total_quantity%></span>
        </h4>
        <ul class="list-group mb-3">
          <li class="list-group-item d-flex justify-content-between lh-sm">
            <div>
              <h6 class="my-0">Subtotal</h6>
              <small class="text-muted"></small>
            </div>
            <span class="text-muted">¥<%=@total%></span>
          </li>
          <li class="list-group-item d-flex justify-content-between lh-sm">
            <div>
              <h6 class="my-0">Shipping fee</h6>
              <small class="text-muted">Calculated at check out</small>
            </div>
            <span class="text-muted"></span>
          </li>
          <li class="list-group-item d-flex justify-content-between">
            <span>Total</span>
            <strong>¥<%=@total%></strong>
          </li>
        </ul>
      </div>
    </div>


  </div>
</div>